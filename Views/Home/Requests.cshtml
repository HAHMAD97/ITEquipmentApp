@model IEnumerable<ITEquipmentBorrowApp.Models.RequestWithEquipmentViewModel>
<div>
    <h2>All Equipment Requests</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Equipment Type</th>
                <th>Name</th>
                <th>Role of User</th>
                <th>Duration</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.EquipmentType</td>
                    <td>@request.RequesterName</td>
                    <td>@request.RequesterRole</td>
                    <td>@request.DurationDays</td>
                    <td class="@(
                        request.Status == RequestStatus.Accepted ? "text-success" :
                        request.Status == RequestStatus.Denied ? "text-danger" :
                        ""
                    )">
                        @request.Status
                    </td>
                    <td>
                        <form asp-action="Accept" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@request.RequestId" />
                            <button type="submit" class="btn btn-success btn-sm">Accept</button>
                        </form>
                        <form asp-action="Deny" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@request.RequestId" />
                            <button type="submit" class="btn btn-danger btn-sm">Deny</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

               