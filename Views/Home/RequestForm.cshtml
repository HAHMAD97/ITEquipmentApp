@model ITEquipmentBorrowApp.Models.ITEquipmentRequest
<div>
    <form asp-action="RequestForm" method="post">

        <div>
            <label asp-for="Requester.Name" class="form-label">Your name:</label>
            <input asp-for="Requester.Name" class="form-control" />
            <span asp-validation-for="Requester.Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Requester.Email" class="form-label">Your email:</label>
            <input asp-for="Requester.Email" class="form-control" />
            <span asp-validation-for="Requester.Email" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Requester.Phone" class="form-label">Your phone:</label> 
            <input asp-for="Requester.Phone" class="form-control" />
            <span asp-validation-for="Requester.Phone" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Requester.Role" class="form-label">Role of the person making the request:</label> 
            <select asp-for="Requester.Role" class="form-control">
                <option value="">Choose an option</option>
                <option value="Student">Student</option>
                <option value="Professor">Professor</option> 
            </select>
            <span asp-validation-for="Requester.Role" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="EquipmentId" class="form-label">Equipment</label> 
            <select asp-for="EquipmentId" class="form-control">
                <option value="">Choose an option</option>
                @foreach (var eq in ViewBag.Equipment)
                {
                    <option value="@eq.Id">@eq.Description</option>
                }
            </select>
            <span asp-validation-for="EquipmentId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="RequestDetails" class="form-label">Reason for the request:</label>
            <textarea asp-for="RequestDetails" class="form-control"></textarea>
            <span asp-validation-for="RequestDetails" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Borrow.DurationDays" class="form-label">Duration required: (number of days):</label>
            <input asp-for="Borrow.DurationDays" class="form-control" type="number" />
            <span asp-validation-for="Borrow.DurationDays" class="text-danger"></span>
        </div>
        <div style="margin-top:10px">
        <button class="btn btn-primary" type="submit">Submit Request</button>
        </div>
    </form>
</div>